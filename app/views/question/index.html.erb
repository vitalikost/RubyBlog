<h1>Список вопросов:</h1>

<table>

  <tr>
    <th width="50"><%= link_to 'Рейтинг', question_index_path(sort: 'like') %></th>
    <th width="150"><%= link_to 'Вопрос', question_index_path(sort: 'question') %></th>
    <th width="50"><%= link_to 'Автор', question_index_path(sort: 'user') %></th>
  </tr>

  <% @question.each do |question| %>
      <tr>
        <td><center><%= question.like %></center></td>
        <td><%= question.title %></td>
        <td><%= User.find(question.user_id).name %></td>
        <td><%= link_to 'Посмотреть', question_path(question) %></td>
        <% if current_user%>
            <% if current_user.id == question.user_id  %>
                <td><%= link_to 'Изменить', edit_question_path(question) %></td>
                <td><%= link_to 'Удалить', question_path(question),
                                method: :delete,
                                data: { confirm: 'Вы уверены?' } %></td>
            <% end %>
      <% end %>
      </tr>
      </tr>
  <% end %>
</table>
<p>

  <% if current_user %>
    <%= link_to 'Новый вопрос', new_question_path %>
  <% end %>