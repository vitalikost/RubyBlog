<p>
  <strong>Заголовок:</strong>
  <%= @question.title %>
  <strong>Автор:</strong>
  <%= User.find(@question.user_id).name %>
  <strong>Рейтинг:</strong>
  <%= @question.like %>


<p>
  <strong>Вопрос:</strong>
  <br>
  <%= @question.text %>
</p>
    <% if current_user %>
      <% current_userlike = Userlike.where(id_user: current_user.id, id_question: @question.id ) %>
      <% if  current_userlike.length> 0 %>
            <% if Time.zone.now - current_userlike[0].created_at < 3600 %>
              <%= link_to 'Я передумал',likedown_path(id: @question.id), method: :post %>
            <% else %>
                <%= "Уже голосовали" %>
            <% end %>
      <% else %>
          <%= link_to 'Хорошо',likeup_path(id: @question.id), method: :post %>
      <% end %>
    <% end %>
<hr>
<h2>Ответы:</h2>
<% @question.answers.each do |comment| %>

    <p>
      <strong>Автор:</strong>
      <%= comment.commenter %>
    </p>

    <p>
      <strong>Ответ:</strong>
      <%= comment.body %>
    </p>

    <% if current_user %>
        <% if current_user.id == comment.user_id  %>
          <p>
            <%= link_to 'Удалить', [comment.question, comment],
                        method: :delete,
                        data: { confirm: 'Вы уверены?' } %>
          </p>
        <% end %>
    <% end %>
<% end %>


<% if current_user %>
  <h2>Добавить ответ:</h2>
    <%= form_with(model: [ @question, @question.answers.build ], local: true) do |form| %>
         <p>
          <%= form.label :body %><br>
          <%= form.text_area :body %>
        </p>
        <p>
          <%= form.submit %>
        </p>
    <% end %>
  <% end %>
<%= link_to 'Назад', question_index_path %>

<% if current_user %>
<% else %>
    <% if @views == 3 %>
        <%= javascript_tag "alert('Вижу вам сдесь понравилось, для полного функционала зарегиструйтесь. Спасибо!')" %>
    <% end %>
<% end %>